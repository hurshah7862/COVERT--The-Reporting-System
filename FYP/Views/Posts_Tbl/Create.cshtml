    <!-- Default form contact -->
    <div class="container">
       
            
        <div class="row">
                 <div class="col-lg-6 col-lg-offset-3">
                <div class="panel panel-primary dialog-panel" style="margin-top:45px; height:350px; margin-bottom:42px;">
                    <div class="panel-heading">
                        <h5 class="text-center">Post Information</h5>
                    </div>
                    @using (Html.BeginForm("create", "Posts_Tbl", FormMethod.Post, new { enctype = "multipart/form-data"  }  ))
                    {

                        <div class="col-sm-offset-1">
                            <!-- Default input name -->
                            <br />
                            <div class="mt-2">
                               
                                <label for="defaultFormContactMessageEx" class="grey-text">Category ID: * </label>
                                @Html.DropDownList("categoryid", "Select category" )
                                @Html.DropDownList("areaid", "Select area")


                                <div style="color:red">
                                    <b>
                                        @ViewData["Error"]
                                    </b>
                                </div>
                            </div>
                            <br />

                            <!-- Default input email -->
                            <label for="defaultFormContactEmailEx" class="grey-text">Post Name: * </label>
                            @*<input type="text" id="defaultFormContactEmailEx" placeholder="Title" class="form-control" required>*@
                            @*@Html.TextBox("name", new { @class= " required" })*@
                            <input type="text" name="name" required />

                           <br />
                            <br />
       

                            <!-- Default textarea message -->
                           
                                <label for="defaultFormContactMessageEx" class="grey-text">Description: *</label>
                                @*@Html.TextArea("Description", new { @class = " required" })*@
                                <textarea name="Description" required></textarea>
                                @*<textarea type="text" id="defaultFormContactMessageEx" class="form-control" rows="3" placeholder="Please write some Description." required></textarea>*@
                            
                            @* upload file *@
                            <div class="mt-4">
                                <label style="margin-top:20px; float:left;">
                                    <label for="defaultFormContactMessageEx" class="grey-text">Upload-File: </label>
                                    <br />
                                    <input type="file" name="files[]" id="files" accept=".png , .jpg , .gif , .tiff , .tif , .bmp , .jpeg , .eps , .sr2 , .orf , .nef , .cr2, .raw , .mp4 , .avi , .flv , .wmv , .mov"  multiple="multiple" style="margin-left:50px;"/>
                                    <br />
                                </label>
                            </div>
                          
                            <div class="col-lg-12 col-lg-offset-3 col-xs-offset-3">
                                <button class="btn btn-primary col-lg-2" type="submit"><b>Send</b></button>
                            </div>
                            
                        </div>
                    }
                </div>
        </div>
