@model FYP.Models.Comment_Tbl

@{
    ViewBag.Title = "Edit";
}



<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container" style="margin-top:100px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="panel  panel-primary dialog-panel" style="margin-top:100px">
        <div class="panel-heading">
            <h5 style="font-size:25px;" class="text-center">Comments</h5>
        </div>
    </div>
            <div style="color:red">
                <b>@ViewData["ED"]</b>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CommentId)
            @Html.HiddenFor(Model => Model.UserId)
            @Html.HiddenFor(model => model.PostId)
            @Html.HiddenFor(model => model.Date)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.TextAreaFor(model => model.Name, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", new { id=Model.PostId})
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
